<body>
   <div id="notice">
        <% if flash[:notice] %>
            <div class="flash">
                 <%= flash[:notice] %>
            </div>
    <% end %>
        
    </div>

<h1>Books</h1>

<div class="books-index-wrapper">
  <table>
    <tr class="index-title">
      <th>Title</th>
      <th>Body</th>
    </tr>
    
    <% @books.each do |book| %>
    <tr class="book-index">
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td class="index-links">
      <%= link_to "show",book_path(book.id) %>
    </td>
    <td class="index-links">
      <%= link_to "edit", edit_book_path(book) %>
    </td>
    <td class="index-links">
      <%= link_to "Destroy",book_path(book),method: :delete, data:{ confirm: 'Are you sure?'} %>
    </td>
    </tr>
    
  <% end %>
    
  </table>
  
</div>

<h2>New book</h2>

 
<% if @book.errors.any? %>
  <div id = "alert">
    <h3 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
<%= form_with model:@book,local:true do |f| %>


<div class="util-field">
<h4 class="util-field-title">Title</h4>
<%= f.text_field :title %>
</div>

<div class="util-field">
<h4 class="util-field-title">body</h4>
<%= f.text_area :body %>
</div>


<div class="util-field">
<%= f.submit 'Create Book' %>
</div>

<% end %>

</body>

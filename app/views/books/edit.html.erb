<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "alert">
    <ul style="color: red">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book,local:true do |f| %>
  <div class="edit-items">
      <div class="edit-item">
        <h4 class="util-field-title">Title</h4>
        <%= f.text_field :title %>
      
      </div>
  
<div class="util-field">
  <h4 class="util-field-title">Body</h4>
  <%= f.text_area :body %>
</div>

<div class="util-field">
  <%= f.submit 'Update Book' %>
</div>

  <div class="edit-btn">
  
    <%= link_to "Show",book_path %> |

    <span class=" edit-border"></span>
    <%= link_to "Back",books_path %>
  </div>
    
  </div>

<% end %>
